<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <include
        layout="@layout/main_toolbar"
        android:id="@+id/main_toolbar" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:id="@+id/profile_picture"
        android:layout_gravity="center_horizontal"
        android:src="#ff00b9ff"
        android:layout_above="@+id/profile_name"
        android:layout_alignRight="@+id/profile_phone"
        android:layout_alignEnd="@+id/profile_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/profile_name"
        android:layout_gravity="center_horizontal"
        android:text="NAME"
        android:layout_above="@+id/profile_phone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/profile_email"
        android:layout_gravity="center_horizontal"
        android:text="name@mail.com"
        android:layout_below="@+id/profile_phone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/profile_phone"
        android:layout_gravity="center_horizontal"
        android:text="xxx-xxxxxxx"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>