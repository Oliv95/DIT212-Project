<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.ice.client" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <activity
            android:name="se.ice.client.android.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="se.ice.client.android.activities.ProfileActivity" >
        </activity>
        <activity android:name="se.ice.client.android.activities.RegisterActivity" >
        </activity>
        <activity android:name="se.ice.client.android.activities.CreateCourseActivity" >
        </activity>
        <activity android:name="se.ice.client.android.activities.JoinCourseActivity" >
        </activity>
        <activity android:name="se.ice.client.android.activities.CoursesActivity" >
        </activity>

    </application>

</manifest>
